<div class="container-fluid">
<h2>编辑用户</h2>

<div class="form-signin">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, "姓名" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :email, "邮箱" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "新密码" %> <i>(如果不想修改请留空)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "确认密码" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "当前密码" %> <i>(需要填写)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "更新", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<h3>删除账号</h3>

<p>不喜欢? <%= button_to "删除账号", registration_path(resource_name), class: "btn btn-lg btn-primary", data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "返回", :back %>

</div>
</div>
